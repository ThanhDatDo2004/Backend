{
  "info": {
    "name": "Shop Revenue Payout Test",
    "description": "Test suite for payout request endpoints"
  },
  "item": [
    {
      "name": "1. Get Bank Accounts",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer YOUR_TOKEN_HERE",
            "type": "text"
          }
        ],
        "url": {
          "raw": "http://localhost:5050/api/shops/me/bank-accounts",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5050",
          "path": ["api", "shops", "me", "bank-accounts"]
        }
      },
      "description": "Get shop's bank accounts (should show default account)"
    },
    {
      "name": "2. Get Wallet",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer YOUR_TOKEN_HERE",
            "type": "text"
          }
        ],
        "url": {
          "raw": "http://localhost:5050/api/shops/me/wallet",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5050",
          "path": ["api", "shops", "me", "wallet"]
        }
      },
      "description": "Get wallet balance"
    },
    {
      "name": "3. Create Payout Request (WITHOUT bank_id)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer YOUR_TOKEN_HERE",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"amount\": 500,\n  \"password\": \"YOUR_PASSWORD_HERE\",\n  \"note\": \"Test payout without bank_id\"\n}"
        },
        "url": {
          "raw": "http://localhost:5050/api/shops/me/payout-requests",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5050",
          "path": ["api", "shops", "me", "payout-requests"]
        }
      },
      "description": "Create payout request - backend will use DEFAULT bank account"
    },
    {
      "name": "4. Create Payout Request (WITH bank_id)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer YOUR_TOKEN_HERE",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"amount\": 500,\n  \"bank_id\": 14,\n  \"password\": \"YOUR_PASSWORD_HERE\",\n  \"note\": \"Test payout with specific bank_id\"\n}"
        },
        "url": {
          "raw": "http://localhost:5050/api/shops/me/payout-requests",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5050",
          "path": ["api", "shops", "me", "payout-requests"]
        }
      },
      "description": "Create payout request with specific bank account (ShopBankID: 14)"
    },
    {
      "name": "5. List Payout Requests",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer YOUR_TOKEN_HERE",
            "type": "text"
          }
        ],
        "url": {
          "raw": "http://localhost:5050/api/shops/me/payout-requests",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5050",
          "path": ["api", "shops", "me", "payout-requests"]
        }
      },
      "description": "List all payout requests"
    }
  ]
}
