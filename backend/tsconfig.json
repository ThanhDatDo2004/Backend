{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,

    "outDir": "dist",
    "rootDir": "src",

    "noEmit": false,
    "isolatedModules": false
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}